<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" class="card-img-top" alt="image" style="width:100%; height:auto">
        {% else %}
            <img src="{{ 'images/properties/empty.jpg' | imagine_filter('thumb') }}" class="card-img-top" alt="image" style="width:100%; height:auto">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a style="text-decoration: none" href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.description | nl2br }}</p>
        <p class="card-text"> {{ property.surface }} m² -  {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold" >
            {{ property.formattedPrice }} €
        </div>
        <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}" class="btn btn-primary" role="button" style="text-decoration: none; margin-left: 85px;">Voir plus ...</a>

    </div>

</div>